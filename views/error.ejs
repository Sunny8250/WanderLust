<% layout("/layouts/boilerplate") %>

  <div class="row mt-5">
    <div class="col-md-8 offset-md-2">
      <div class="alert alert-danger text-center">
        <h4 class="alert-heading">Oops! Something went wrong.</h4>
        <p>
          <%= err.message %>
        </p>
        <hr>
        <p class="mb-0">Status Code: <strong>
            <%= err.statusCode || 500 %>
          </strong></p>
        <a href="/listings" class="btn btn-dark mt-3">Go Back</a>
      </div>
    </div>
  </div>